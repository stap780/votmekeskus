<style type="text/css">
  body {
    background-color: #eee;
  }

  .form-signup {
    max-width: 330px;
    padding: 15px;
    margin: 0 auto;
  }
  .form-signup .checkbox,
  .form-signup .form-signup-heading {
    margin-bottom: 10px;
  }
  .form-signup .checkbox {
    font-weight: normal;
  }
  .form-signup .form-control {
    position: relative;
    height: auto;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding: 10px;
    font-size: 16px;
  }
  .form-signup .form-control:focus {
    z-index: 2;
  }
  .form-signup input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }
  .form-signup #user_password_confirmation {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
  .form-signup input[type="text"] {
    margin-bottom: -1px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
  .form-signup #user_subdomain {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
  .form-sign-help {
    max-width: 330px;
    padding: 15px;
    margin: 0 auto;
}
  footer {
    display: none;
  }
</style>

<div class="form-wrap">
  <%= render partial: 'form' %>
  <div class="form-sign-help">
  <%= render "devise/shared/links" %>
  </div>
</div>
